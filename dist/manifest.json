{
  "manifest_version": 2,
  "name": "ChatGPT Toolbox",
  "version": "0.0.2",
  "icons": {
    "16": "src/assets/icons/ChatGPT-16.png",
    "32": "src/assets/icons/ChatGPT-32.png",
    "48": "src/assets/icons/ChatGPT-48.png",
    "128": "src/assets/icons/ChatGPT-128.png"
  },
  "description": "ChatGPT-Toolbox helps you to interact with OpenAI's powerful AI",
  "homepage_url": "https://github.com/smoqadam/chatgpt-toolbox",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "author": "Saeed Moghadamzadeh",
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["src/js/serviceWorker.bundle.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/js/contentScript.bundle.js"
      ],
      "css": []
    }
  ],
  "web_accessible_resources": [
    "/src/css/popup.css", 
    "/src/assets/icons/settings.png",
    "/src/assets/icons/settings-hover.png",
    "/src/assets/icons/close.png",
    "/src/assets/icons/close-hover.png"
  ]
}