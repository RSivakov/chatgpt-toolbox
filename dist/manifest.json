{
  "manifest_version": 3,
  "name": "ChatGPT Toolkit",
  "version": "0.0.1",
  "icons": {
    "16": "src/assets/icons/favicon-16.png",
    "32": "src/assets/icons/favicon-32.png",
    "48": "src/assets/icons/favicon-48.png",
    "128": "src/assets/icons/favicon-128.png"
  },
  "description": "ChatGPT-Toolkit helps you to interact with OpenAI's powerful AI",
  "homepage_url": "https://github.com/smoqadam/web-extension-starter",
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "author": "Saeed Moghadamzadeh",
  "minimum_chrome_version": "88",
  "options_page": "src/options.html",
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/js/serviceWorker.bundle.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/js/contentScript.bundle.js"
      ],
      "css": [
      ]
    }
  ],
  "web_accessible_resources": [{
    "resources":["src/css/popup.css", "src/assets/icons/setting.png"],
    "matches": [
      "http://*/*",
      "https://*/*"
    ]
  }]
}